@model IEnumerable<Library.Models.BookDetails>

@{
    ViewData["Title"] = "Details";

}


<h1>History of the Book</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservedPerson)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservedPerson)
                </td>


            </tr>
        }
    </tbody>
</table>

<div>

    <a asp-action="Index">Back to List</a>
</div>
